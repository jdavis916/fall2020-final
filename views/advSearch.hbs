<main class="{{pgMainClass}}">
		<h1>{{title}}</h1>
		<p>{{msg}}</p>

		<form action="/" method="POST">
            <select name="brands">
                {{#each brands}}
                    <option value="{{this}}">{{this}}</option>
                {{/each}}
            </select>
      
            <select name="models">
                {{#each models}}
                    <option value="{{this}}">{{this}}</option>
                {{/each}}
            </select>
     
            <select name="mpg">
                {{#each mpg}}
                    <option value="{{this.id}}">{{this.title}}</option>
                {{/each}}
            </select>
      
            <select name="fuel">
                {{#each fuel}}
                    <option value="{{this}}">{{this}}</option>
                {{/each}}
            </select>

            <select name="door">
                {{#each door}}
                    <option value="{{this}}">{{this}}</option>
                {{/each}}
            </select>
            <select name="seat">
                {{#each seat}}
                    <option value="{{this}}">{{this}}</option>
                {{/each}}
            </select>
        </form>  

</main>
